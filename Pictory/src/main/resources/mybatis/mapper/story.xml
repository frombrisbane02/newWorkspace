<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="mybatis.mapper.story">	

	<select id="virtuallist" resultType="com.pictory.springapp.dto.StoryDTO">
		SELECT * FROM STORY
	</select>
	
	<!-- post 넘버 받아오기 -->
	<select id="virtualImages" parameterType="com.pictory.springapp.dto.StoryDTO" resultType="com.pictory.springapp.dto.StoryDTO">
		SELECT s.sNo, ph.photoURL FROM PHOTO ph, POST p, STORY s WHERE s.sNo = p.sNo AND p.postNo = ph.postNo
	</select> 
	
	
	

</mapper>