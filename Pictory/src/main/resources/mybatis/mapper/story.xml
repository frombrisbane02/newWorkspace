<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="mybatis.mapper.story">	

	<select id="storyllist" resultType="StoryDTO">
		SELECT * FROM STORY
	</select>
	
	<!-- 스토리가 #번인 사진 전부 가져오기 -->
	<select id="storyimages" resultType="StoryDTO">
		SELECT ph.photoUrl, s.sNo
		FROM PHOTO ph
		RIGHT OUTER JOIN POST p ON ph.postNo=p.postNo
		RIGHT OUTER JOIN STORY s ON p.sNo=s.sNo
	</select>


</mapper>