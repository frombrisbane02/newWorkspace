<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="mybatis.mapper.story">	

	<select id="virtuallist" resultType="com.pictory.springapp.dto.StoryDTO">
		SELECT * FROM STORY
	</select>
	
	<!-- 스토리가 #번인 사진 전부 가져오기 -->
	<select id="virtualimages" parameterType="com.pictory.springapp.dto.StoryDTO" resultType="com.pictory.springapp.dto.StoryDTO">
		select * from photo where postno in (select postno from post where sno=#{sno});
	</select> 
	
	
	

</mapper>